{
    "name": "accident-detection-system/backend",
    "description": "Backend API for Accident Detection and Nearest Hospital Alert System",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^6.0",
        "vlucas/phpdotenv": "^5.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true
    }
}
